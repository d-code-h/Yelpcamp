<!-- including header -->
<% include ../partials/header %>

<!-- main page contents -->
<h1 id="form-head" class="text-center">Add New Comment to <%= campground.name %></h1>

<div class="container">
    <div class="row">
        <div class="half">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="text" class="sr-only">Text</label>
                    <input class="form-control" type="text" name="text" id="text" placeholder="text" />
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Submit!" />
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<!-- including footer -->
<% include ../partials/footer %>
