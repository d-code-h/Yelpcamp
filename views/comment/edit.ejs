<!-- including header -->
<% include ../partials/header %>

<!-- main page contents -->
<h1 id="form-head" class="text-center">Edit Comment</h1>

<div class="container">
    <div class="row">
        <div class="half">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="text" class="sr-only">Text</label>
                    <input class="form-control" type="text" name="comment[text]" id="text" value="<%= comment.text %>" />
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Submit!" />
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
    </div>
</div>

<!-- including footer -->
<% include ../partials/footer %>
