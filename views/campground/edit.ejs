                    <!-- CAMPGROUND EDIT TEMPLATE -->
<!-- ================================================================== -->
<!-- including header -->
<% include ../partials/header %>
 
<!-- main page contents -->
<h1 id="form-head" class="text-center">Edit <%= campground.name %></h1>

<div class="container">
    <div class="row">
        <div class="half">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name" class="sr-only">Name</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>" />
                </div>
                <div class="form-group">
                    <label for="image" class="sr-only">Image</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>" />
                </div>
                <div class="form-group">
                    <label for="description" class="sr-only">Description</label>
                    <input class="form-control" type="text" name="campground[description]" id="description" value="<%= campground.description %>" />
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-block btn-primary" type="submit" value="Update!" />
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<!-- including footer -->
<% include ../partials/footer %>
