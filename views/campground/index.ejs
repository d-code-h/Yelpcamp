                    <!-- CAMPGROUND INDEX TEMPLATE -->
<!-- ================================================================== -->
<!-- including header -->
<% include ../partials/header %>

<!-- main page contents -->

<div class="container">
    <header class="jumbotron">
        <h1><i class="fa fa-campground"></i> Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-lg btn-primary" href="/campgrounds/new">Add New Campground</a>
        </p>
    </header>
    <div class="row campground">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card">
                    <img src="<%= campground.image %>" alt="campground image" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %></h5>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- including footer -->
<% include ../partials/footer %>