<%- include ("../partials/header") %>

<div class="container">
  <main class="card shadow formscale">
    <h2>Edit Comment</h2>
    <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-floating">
        <input type="text" class="form-control" name="text" value="<%= comment.text %>" id="text" placeholder="Text">
        <label for="text">Text</label>
      </div>
      <div class="form-group submit">
          <input class="btn btn-info d-block mx-auto" type="submit" value="Update Comment" />
        </div>
    </form>
    <a href="/campgrounds/<%= campground._id %>"><i class="fa fa-arrow-circle-left fa-bg"></i> Go back</a>
  </main>
</div>

<%- include ("../partials/footer") %>