<%- include ("../partials/header") %>

<div class="container">
  <main class="card shadow formscale">
    <h2>Add Comment to <%= campground.title %></h2>
    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-floating">
        <input type="text" class="form-control" name="text" id="text" placeholder="Text">
        <label for="text">Text</label>
      </div>
      <div class="form-group submit">
          <input class="btn btn-info d-block mx-auto" type="submit" value="Submit" />
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>"><i class="fa fa-arrow-circle-left fa-bg"></i> Go back</a>
  </main>
</div>

<%- include ("../partials/footer") %>