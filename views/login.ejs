<%- include ("./partials/header") %>

<div class="container">
  <main class="card shadow formscale">
      <h1>Login</h1>
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="form-floating">
          <input type="text" class="form-control" name="username" id="username" placeholder="Username" minlength="3" required />
          <label for="username">Username</label>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please choose a username not less than three letters.
          </div>
        </div>

        <div class="form-floating">
          <input type="password" class="form-control" name="password" id="password" placeholder="Password" pattern="^(?=.*[a-z].*[a-z])(?=.*[A-Z])(?=.*\d.*\d)[a-zA-Z0-9\S]{8,}$" required />
          <label for="password">Password</label>
          <div class="valid-feedback">
            Great!
          </div>
          <div class="invalid-feedback">
            Minimum a capital, two digits, two small and not less than 8 values is accepted!
          </div>
        </div>

        <div class="form-check">
          <input class="form-check-input" name="remember" value="remember" type="checkbox" id="remember">
          <label class="form-check-label mt-2" for="remember">
            Remember me
          </label>
        </div>

        <div class="form-group submit d-none d-md-block">
          <a class="btn btn-primary mr-auto" href="/resetpassword">Forget Password?</a>
          <input class="btn btn-info mt-0 float-end" type="submit" value="Login" />
        </div>
        <div class="form-group submit text-center d-md-none">
          <input class="btn btn-info mt-0" type="submit" value="Login" />
          <a class="btn btn-primary mt-2" href="/resetpassword">Forget Password?</a>
        </div>
      </form>

      <a href="/campgrounds"><i class="fa fa-arrow-circle-left fa-bg"></i> Go back</a>
  </main>
</div>

<%- include ("./partials/footer") %>