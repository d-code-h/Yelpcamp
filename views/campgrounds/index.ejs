<%- include ("../partials/header") %>

<div class="se-pre-con"></div>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fa fa-campground"></i> Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <a href="/campgrounds/new" class="btn btn-info btn-lg">Add New Campground</a>
        </div>
    </header>

    <div class="row">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card">
                    <img height="200" src="<%= campground.image.src %>">
                    <div class="card-body">
                      <h5 class="card-title"><%= campground.title %></h5>
                      <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
                    </div>
                  </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include ("../partials/footer") %>